{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "exclude": ["node_modules", "jest.config.ts", "tests", "./dist/**/*"]
}
